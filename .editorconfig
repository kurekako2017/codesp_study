root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json,css,scss,html}]
indent_style = space
indent_size = 2

[*.{py,yml,yaml}]
indent_style = space
indent_size = 4

[*.{cds,abap}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf